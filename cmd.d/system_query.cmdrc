# -----------------------------------------------------------------------------
# PROCESSES
function psgrep () {
    #  --signal signal
    #  --list-name
    #  --list-full
    ps -ef | {
        read -r;
        echo "$REPLY";
        grep --color=auto "$@"
    }
}

