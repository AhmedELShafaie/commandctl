# Whereis extended info
whichmore () {
  which $1 | xargs ls -la
}


# TOP 20 FOLDERS FROM PATH  BY TOTAL SIZE
biggest () {
  COUNT=${1:-20}
  du --block-size=M ${COUNT} | sort -n -r | head -n 20
}


# /----------------------------------------------------------------------------
