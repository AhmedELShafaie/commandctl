# SEARCH APT-CACHE WITH HIGHLIGHTING
function apt_grep () {
  IGNORE="lib*"
  SEEK=$1
  apt-cache search $SEEK | sort | grep -v $IGNORE  | grep --color $SEEK
}


alias apt.i="sudo apt-get install"
